<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowState="Maximized" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Icon="./Resource/logo.png">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="6*"/>
			<ColumnDefinition Width="7*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="6*"/>
			<RowDefinition Height="6*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>

		<Image Source="./Resource/bg.jpg" Stretch="Fill" Grid.RowSpan="4" Grid.ColumnSpan="4"/>

		<Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Background="#2e3e4c" CornerRadius="30,0,0,30">
			
		</Border>
		<Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Background="#1e2a34" CornerRadius="0,30,30,0">

		</Border>

	</Grid>
</Window>
